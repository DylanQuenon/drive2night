{% extends 'base.html.twig' %}

{% block title %}Site login{% endblock %}

{% block body %}
    <div class="container full">
        <div class="row">
            <div class="col-md-6 offset-md-3 bg-light p-3">
                <h1>Login</h1>
                {# gestion des erreurs #}
                 {% if hasError %}
                    <div class="alert alert-danger">
                        An error has occurred, user name or password is invalid
                    </div>
                {% endif %}
                  {% if loginError %}
                    <div class="alert alert-danger">
                        {{ loginError }}
                    </div>
                {% endif %}
                <form action="{{path('account_login')}}" method="POST">
                    <div class="form-group my-2">
                         {# Symfony veut un name précis pour le login : _username #}
                        <label for="email">E-mail</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Email..." required value="{{username}}">
                    </div>
                    <div class="form-group my-2">
                        {# Symfony veut un name précis pour le password : _password #}
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Password..." required>
                    </div>
                    <div class="form-group my-2">
                        <button type="submit" class="btn btn-success my-3">Login</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
{% endblock %}