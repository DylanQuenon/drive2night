<div class="col-md-4 my-2">
    <div class="card card-car mb-4" style="min-height:400px;"> 
        {% set url = path('cars_show', {'slug':car.slug}) %}
        {% set brandUrl = path('cars_brand', {'slugBrand':car.slugBrand}) %}

        <img src="{{ car.coverImage }}" class="card-img-top" alt="{{ car.fullCar }}">
        <div class="card-body">
            <h5 class="card-title">{{ car.fullCar }}</h5>
            <p class="card-text">
                <strong>Mileage:</strong> {{ car.km|number_format(0, ',', '.') }} km<br>
                <strong>Price:</strong> ${{ car.price|number_format(0, ',', '.') }}<br>
                <strong>Year:</strong> {{ car.year }}<br>
                <strong>Brand:</strong> <a href="{{ brandUrl }}" class="text-danger">{{ car.brand }} </a> <br>
            </p>
            <a href="{{ url }}" class="btn btn-danger btn-block">Read more</a>
        </div>
    </div>
</div>
