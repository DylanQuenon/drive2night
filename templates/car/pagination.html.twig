<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, {'page': page - 1}) }}" aria-label="Previous">
                    <span aria-hidden="true" style="color: red;">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% for p in 1..pages %}
            <li class="page-item{% if p == page %} active{% endif %}">
                <a class="page-link" href="{{ path(route, {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}

        {% if page < pages %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, {'page': page + 1}) }}" aria-label="Next">
                    <span aria-hidden="true" style="color: red;">&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
