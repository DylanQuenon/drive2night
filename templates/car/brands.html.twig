{% extends 'base.html.twig' %}

{% block title %}{{ brand|capitalize }}-Cars{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not cars|length %} {# si tu trouves pas affiche ce message#}
            <h2>There are no cars that match... </h2>
            <a href="{{ path('cars_brands_list')}}" class="btn btn-danger text-white">Back to brands list</a>
        {% else %}
            <h1>{{ brand }} cars</h1>
        
            <div class="row">
                {% for car in cars %}
                    {% include "/car/_cards.html.twig" %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}